<h2 class="form-title">Log In to Enter Your Art Space</h2>

{{#if this.isAuthenticating}}
  <section class="status-bar"><span>Verifying credentials</span></section>
{{/if}}
{{#if this.errorMessage}}
  <section class="status-bar"><span>{{this.errorMessage}}</span></section>
{{/if}}

<form {{on "submit" this.login}}>
  <div class="rentals">
    <label for="mu-login-username">Username</label>
    <Input
      id="mu-login-username"
      @value={{this.nickname}}
      placeholder={{@placeholder}}
    />
  </div>
  <div class="rentals">
    <label for="mu-login-password">Password</label>
    <Input id="mu-login-password" @value={{this.password}} @type="password" />
  </div>
  {{!-- <div class="feedback-message">
    {{#if this.isAuthenticating}}
      <div class="mu-login-authenticating">
        Verifying credentials
      </div>
    {{/if}}
    {{#if this.errorMessage}}
      <div class="mu-login-error-message">
        {{this.errorMessage}}
      </div>
    {{/if}}
  </div> --}}
  {{#if this.isAuthenticating}}
    <button type="submit" disabled={{true}} class="mu-login-button">
      {{this.label}}
    </button>
  {{else}}
    <button type="submit" class="button">
      {{this.label}}
    </button>
  {{/if}}
</form>