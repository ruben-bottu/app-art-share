<article class="rental">
  <Artwork::Image
    src={{@artwork.imageUrl}}
    alt="A picture of {{@artwork.title}}"
  />
  <div class="details">
    <h3>{{@artwork.title}}</h3>
    <div class="detail owner">
      <span>Artist:</span> {{@artist.name}}
    </div>
    <div class="detail type">
      <span>Type:</span> {{@artwork.artType}}
    </div>
    <div class="detail location">
      <span>Description:</span> {{@artwork.description}}
    </div>
    <!--<div class="detail bedrooms">
      <span>Number of bedrooms:</span> {{@artwork.bedrooms}}
    </div>-->
  </div>
</article>