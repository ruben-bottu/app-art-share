{{#if this.statusMessage}}
  <section class="status-bar"><span>{{this.statusMessage}}</span></section>
{{/if}}

<h2 class="form-title">Register Yourself!</h2>

<form {{on "submit" this.register}}>
  <div class="rentals">
    <label for="register-name">Name</label>
    <Input @value={{this.name}} placeholder="John Doe" id="register-name" />
    {{#if this.nameError}}
      <span>{{this.nameError}}</span>
    {{/if}}
  </div>
  <div class="rentals">
    <label for="register-username">Username</label>
    <Input
      @value={{this.nickname}}
      placeholder="john.doe"
      id="register-username"
    />
    {{#if this.nicknameError}}
      <span>{{this.nicknameError}}</span>
    {{/if}}
  </div>
  <div class="rentals">
    <label for="register-password">Password</label>
    <Input @value={{this.password}} @type="password" id="register-password" />
    {{#if this.passwordError}}
      <span>{{this.passwordError}}</span>
    {{/if}}
  </div>
  <div class="rentals">
    <label for="register-confirm-password">Confirm password</label>
    <Input
      @value={{this.passwordConfirmation}}
      @type="password"
      id="register-confirm-password"
    />
    {{#if this.passwordConfirmationError}}
      <span>{{this.passwordConfirmationError}}</span>
    {{/if}}
  </div>
  <button type="submit" class="button">Register</button>
</form>